<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingBottom="10dip"
    android:background="@color/white" >
    
   
        
        <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:paddingRight="5dip"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/img_topic_item_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:src="@drawable/topic_img" />

	    <TextView
	        android:id="@+id/txt_topic_item_left"
	        android:layout_width="wrap_content"
	        android:singleLine="true"
	        android:layout_height="20dip"
	        android:layout_alignBottom="@+id/img_topic_item_left"
	        android:layout_alignLeft="@+id/img_topic_item_left"
	        android:layout_alignRight="@+id/img_topic_item_left"
	        android:background="@color/translucence_black"
	        android:text="足球啦啦 啦，标题新闻"
	        android:paddingLeft="5dip"
	        android:textColor="@color/white" />
	
	</RelativeLayout>
        
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:paddingLeft="5dip"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/img_topic_item_right"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:scaleType="fitXY"
	        android:src="@drawable/topic_img" />
	
	    <TextView
	        android:id="@+id/txt_topic_item_right"
	        android:layout_width="wrap_content"
	        android:singleLine="true"
	        android:layout_height="20dip"
	        android:layout_alignBottom="@+id/img_topic_item_right"
	        android:layout_alignLeft="@+id/img_topic_item_right"
	        android:layout_alignRight="@+id/img_topic_item_right"
	        android:background="@color/translucence_black"
	        android:text="足球啦啦 啦，标题新闻"
	        android:paddingLeft="5dip"
	        android:textColor="@color/white" />
	
	</RelativeLayout>

    

</TableRow>