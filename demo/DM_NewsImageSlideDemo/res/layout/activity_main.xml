<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.lgq.dm_newsimageslidedemo.ScrollViewExtend
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:id="@+id/rel_top"
        android:layout_height="130dip">
        
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_news_image_slide"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:background="#e0616161"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/txt_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="#ffffff"/>
            
            <LinearLayout
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"
                android:layout_marginRight="15dip"
                android:gravity="center">
                
                <View 
                    android:id="@+id/view_news_dot0"
                    style="@style/dot_style"
                    android:background="@drawable/dot_focused"/>
                
                <View 
                    android:id="@+id/view_news_dot1"
                    style="@style/dot_style"/>
                
                <View 
                    android:id="@+id/view_news_dot2"
                    style="@style/dot_style"/>
                
                <View 
                    android:id="@+id/view_news_dot3"
                    style="@style/dot_style"/>
                
                
            </LinearLayout>
            
        </RelativeLayout>
        
    </RelativeLayout>
                
        <ListView
            android:id="@+id/lv_news"
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:layout_below="@+id/rel_top" >
            
        </ListView>        
    
    </RelativeLayout>
    </com.lgq.dm_newsimageslidedemo.ScrollViewExtend>
    
</LinearLayout>
